
// ProblemL:Non Overlapping intervals
// problem link: https://leetcode.com/problems/non-overlapping-intervals/?envType=study-plan-v2&envId=leetcode-75


class Solution {
public:
    int eraseOverlapIntervals(vector<vector<int>>& intervals) {

        sort(intervals.begin(), intervals.end(),
     [](auto& a, auto& b) { return a[1] < b[1]; });  // sort with respect to  second element

        int cnt = 0;
        int ans=0;
        int second = intervals[0][1];
        for (int j = 1; j < intervals.size(); j++) {

            if (second <= intervals[j][0]) {
                cnt++;
                second = intervals[j][1];
            }
        }
        ans = intervals.size() - cnt - 1;

        return ans;
    }
};
